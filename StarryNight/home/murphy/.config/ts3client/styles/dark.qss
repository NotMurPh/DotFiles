/* Disabled elements */
QLineEdit:disabled,
QComboBox:disabled,
QSpinBox:disabled {
    border:1px solid #1E2030;
    border-radius: 3px;
    background: #1E2030;
    color: #43454B;
}
QCheckBox:disabled,
QRadioButton:disabled,
QTextEdit:disabled {
    color: #43454B;
}
QTextEdit:disabled {
    background: #1E2030;
}

/* Use iOS style "Switches" instead of checkboxes and radio buttons */
QCheckBox::indicator:checked {
    height: 20px;
    width: 35px;
    background: #ffff00;
    border: none;
    border-radius: 10px;
    image: url(styles:dark/gfx/checkbox_enabled.svg);
}
QCheckBox::indicator:unchecked {
    height: 20px;
    width: 35px;
    background: #72767D;
    border: none;
    border-radius: 10px;
    image: url(styles:dark/gfx/checkbox_disabled.svg);
}
QCheckBox::indicator:checked:hover {
    background: #ffff00;
}
QCheckBox::indicator:unchecked:hover {
    background: #72767D;
}
QCheckBox::indicator:disabled:checked {
    background: #1e2030;
    image: url(styles:dark/gfx/checkbox_inactive_enabled.svg);
}
QCheckBox::indicator:disabled:unchecked {
    background: #1e2030;
    image: url(styles:dark/gfx/checkbox_inactive_disabled.svg);
}
QRadioButton {
    border: 1px solid #1E2030;
    border-radius: 3px;
    background: #1E2030;
    color: #CCCCCC;
    padding: 3px 4px;
    selection-background-color: #14151f;
    font-size: 8pt;
}
QRadioButton::indicator {
    width: 20px;
    height: 20px;
    padding: 5px;
    background-color: transparent;
    border: none;
    border-radius: 3px;
    padding-right: 5px;
}
QRadioButton:checked {
    background: #ffff00;
    color: #FFFFFF;
}
QRadioButton:disabled:checked {
    background: #1e2030;
    color: #666666;
}
QRadioButton::indicator:checked {
    image: url(styles:dark/gfx/checkbox_tree_enabled.svg);
}
QRadioButton::indicator::unchecked {
    image: url(styles:dark/gfx/checkbox_tree_disabled.svg);
}
QRadioButton::indicator:disabled:checked {
    image: url(styles:dark/gfx/checkbox_tree_inactive_enabled.svg);
}
QRadioButton::indicator:disabled:unchecked {
    image: url(styles:dark/gfx/checkbox_tree_inactive_disabled.svg);
}

