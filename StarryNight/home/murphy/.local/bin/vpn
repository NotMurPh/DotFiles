#!/bin/bash

open_udp2raw() {
    sudo udp2raw -c -l 0.0.0.0:4444 -r 5.75.210.204:2005 --cipher-mode xor --auth-mode simple --raw-mode icmp > /dev/null 2>&1 &
}

close_udp2raw() {
    sudo pkill udp2raw
}

case $1 in
    on)
        operation=up
		sudo wg-quick $operation l-hetzner1-1 &> /dev/null
        open_udp2raw
		eww update vpn_status="connected"
        echo -e '\033[0;32mVpn Connected'
        ;;
    off)
        operation=down
		sudo wg-quick $operation l-hetzner1-1 &> /dev/null
		eww update vpn_status="disconnected"
        echo -e '\033[0;31mVpn Disconnected'
        ;;
    reload)
		close_udp2raw
		open_udp2raw
	;;
    *)
        echo 'Usage: Vpn <On/Off>'
        exit 1
        ;;
esac
