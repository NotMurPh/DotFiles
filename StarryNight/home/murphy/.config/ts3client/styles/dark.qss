/*
* Dark stylesheet for TeamSpeak 3 client
*
* Copyright (c) 2020 random-host.tv
*
* Global overrides for QPalette::ColorRole values:
* QPalette::Link = #1CB0F4;
*
* Global overrides for specific highlight colors:
* CustomColor::ClientFriend    = #1CA037;
* CustomColor::ClientBlocked   = #C90709;
* CustomColor::ClientRecording = #FAA61A;
*/

/* Main colors for most elements */
QMainWindow,
QWidget,
QDialog,
TextBrowser,
QAbstractItemView,
QTextEdit,
QSplitter {
    background: #1E2030;
    color: #ffffff;
    outline: none;
}

QFrame {
    border: none;
}

/* Box that groups elements together (Example: Tools -> Options -> Application -> Server */
QGroupBox {
    border: none;
    border-bottom: 1px solid #1E2030;
    padding-top: 13px;
    margin-top: 5px;
    font-weight: bold;
}
QGroupBox::title {
    color: #ffffff;
    font-weight: bold;
    padding: 0;
}

/* Options dialog title and description */
QWidget#HeadlineLabel,
ProfileListWidget {
    background-color: #1E2030;
    border: 1px solid #1E2030;
    border-radius: 3px;
}
QLabel#OptionsHeadlineTitleLabel {
    text-transform: uppercase;
    background: none;
    color: #1E2030;
    font-weight: bold;
}
QLabel#OptionsHeadlineDescriptionLabel {
    background: none;
    color: #ffffff;
}
OptionsDialog QTreeView,
OptionsDialog QTableWidget,
OptionsDialog QTableView,
OptionsDialog QListView {
    border: 1px solid #1E2030;
}


/* Server tabs widget and chat widget */
QWidget#MainWindowServerTabsWidget,
QWidget#MainWindowChatWidget {
    background-color: transparent;
}
QWidget::pane {
    border: none;
}

/* Titles for "Bookmarks", "Identities" and "myTeamSpeak" login  */
QLabel#bookmarksBanner,
QLabel#identitiesBanner,
QLabel#accountLoginBanner,
QLabel#accountCreateBanner {
    background-color: #1E2030;
    border: 1px solid #1E2030;
    border-radius: 3px;
    color: #1E2030;
    font-weight: bold;
    padding-left: 6px;
    qproperty-minimumSize: 0px 32px;
}
QLabel#accountLoginBanner,
QLabel#accountCreateBanner {
    qproperty-minimumSize: 420px 32px;
}

/* Statusbar */
QStatusBar {
    background-color: transparent;
}
/* Remove status bar deviders */
QStatusBar::item {
    border-right: none;
}

/* News ticker in the status bar */
QWidget#NewsBanner {
    color: #ffffff;
    background-color: transparent;
    border: none;
    padding-left: 5px;
    font-style: normal;
}
/* NOTE: font-style won't work until TeamSpeak Systems stops hard-coding markup into their labels */
QLabel#NewsLeftLabel {
    padding-right: 6px;
    font-weight: bold;
    font-style: normal;
}

/* Invisible splitter handles */
QSplitter::handle {
    background-color: transparent;
}
QSplitter::handle:horizontal {
    width: 2px;
}
QSplitter::handle:vertical {
    height: 2px;
}

/* Multi line text inputs */
QTextEdit {
    border: 1px solid #1E2030;
    background: #1E2030;
    padding: 6px;
    border-radius: 3px;
}

/* Single line text inputs */
QLineEdit {
    border:1px solid #1E2030;
    border-radius: 3px;
    background: #1E2030;
    padding: 6px;
}

/* Chat input got it's own class */
ChatLineEdit {
    border: none;
    background: #1e2030;
    border-radius: 3px;
    padding: 1px;
}

/* Inline text input for changing nicknames */
QExpandingLineEdit {
    border:1px solid #1E2030;
    border-radius: 3px;
    background: #1E2030;
    padding: 0px;
}

QTableView,
QListView,
QTreeView,
QToolBox {
    border: 1px solid #1E2030;
    outline: none;
    show-decoration-selected: 0;
}

/*
 * Push buttons (e.g. "OK", "Cancel", "Apply")
 *
 * These are used in a thousand places even where it doesn't make much sense
 * such as Tools -> Options -> Addons.
 */
QPushButton {
    background-color: #ffff00;
    border: none;
    border-radius: 3px;
    padding-left: 14px; padding-right: 14px;
    padding-top: 8px; padding-bottom: 8px;
    font-weight: bold;
    color: #000000;
}
QPushButton:hover {
    background: #d4d400;
    color: #000000;
}
QPushButton:pressed {
    background: #d4d400;
    color: #000000;
}
QPushButton:disabled {
    border: none;
    border-radius: 3px;
    background: #1e2030;
    color: #ffffff;
}
QPushButton:checked {
    background-color: #000000;
}
QPushButton:checked:hover {
    background-color: #000000;
}

/* Options -> Addons */
#Addons_Setup > QPushButton,
#Addons_Setup QStackedWidget QWidget QPushButton {
    background: #1E2030;
    border-top: 3px solid #1E2030;
    color: #ffffff;
    border-radius: 0px;
}
#Addons_Setup > QPushButton:hover,
#Addons_Setup QStackedWidget QWidget QPushButton:hover {
    background: #1E2030;
    color: #ffffff;
}
#Addons_Setup > QPushButton:checked,
#Addons_Setup QStackedWidget QWidget QPushButton:checked {
    border-top: 3px solid #ffff00;
    background: #1E2030;
    color: #ffffff;
}

#Addons_Setup QStackedWidget QWidget QListWidget QWidget {
    border: none;
    background: transparent;
}

#Addons_Setup QStackedWidget QWidget QListWidget QPushButton {
    background: #1E2030;
    border: none;
    color: #ffffff;
    border-radius: 0px;
    height: 1.5em;
}
#Addons_Setup QStackedWidget QWidget QListWidget QPushButton:hover {
    background: #1E2030;
    border: none;
    color: #ffffff;
}
#Addons_Setup QStackedWidget QWidget QListWidget QPushButton:checked {
    border-top: none;
    background: #1E2030;
    border: none;
    color: #ffffff;
    image-position: center left;
    text-align: right;
}

/* MenuBar */
QMenuBar {
    background: #1E2030;
    spacing: 2px;
    color: #ffffff;
}
QMenuBar::item {
    background: transparent;
    color: #ffffff;
}
QMenuBar::item:selected {
    background: #1E2030;
    color: #ffffff;
}
QMenuBar::item:pressed {
    background: #1E2030;
    color: #ffffff;
}
QMenu {
    background: #1E2030;
    color: #ffffff;
    border: 1px solid #1E2030;
}
QMenu::item {
    background: transparent;
}
QMenu::item:disabled,
QMenu::item:disabled:selected {
    color: #43454B;
}
QMenu::item:selected {
    background: #36393F;
    color: #ffffff;
}
QMenu::item:on {
    background: #1E2030;
    color: #ffffff;
}
QMenu::separator {
    height:1px;
    margin-bottom: 2px;
    margin-top: 2px;
    background: #1E2030;
}

/* Combobox (drop-down fields) */
QComboBox {
    border:1px solid #1E2030;
    border-radius: 3px;
    background: #1E2030;
    color: #CCCCCC;
    padding: 6px;
    selection-background-color: #14151f;
    font-size: 8pt;
}
QComboBox::drop-down {
    background: transparent;
    border: none;
    border-top-right-radius: 3px;
    border-bottom-right-radius: 3px;
    width: 15px;
    color: #ffffff;
}
QComboBox::down-arrow {
    image: url("styles:dark/gfx/arrow_bold_down.svg");
    width: 10px;
    height: 10px;
}
QComboBox::down-arrow:hover {
    image: url("styles:dark/gfx/arrow_bold_down_hover.svg");
}
QComboBox::down-arrow:on {
    image: none;
}
QComboBox::drop-down:disabled {
    image: url("styles:dark/gfx/arrow_bold_down_disabled.svg");
}
QComboBox:!editable:on,
QComboBox::drop-down:editable:on {
    background: #1E2030;
}
QComboBox:on {
    background: #14151f;
}
QComboBox QAbstractItemView {
    background: #1E2030;
    border:1px solid #1E2030;
    border-top-right-radius: 0;
    border-top-left-radius: 0;
    border-bottom-right-radius: 3px;
    border-bottom-left-radius: 3px;
    selection-background-color: #14151f;
}
QComboBox#utcLocalComboBox {
    padding-left: 14px;
    padding-right: 7px;
}

/* Listview (e.g. "Permissions", "Server Groups", etc.) */
QListView {
    background: #1E2030;
    color:#ffffff;
    selection-background-color: #14151f;
    selection-color: #ffffff;
    show-decoration-selected: 1;
    border: 1px solid #1E2030;
    border-radius: 3px;
    outline: none;
}
QListView::item:hover {
    background: #1E2030;
    border: none;
    border-radius: 0;
}
QListView::item:selected:active {
    background: #1E2030;
    color: #ffffff;
    border: none;
}
QListView::item:selected:!active {
    background: #1E2030;
    color: #ffffff;
    border: none;
}
/* Avoid blue default font colour of unselected items (Example: Permissions -> Server Groups) */
QListView#groupsListView::item:!selected {
  color: rgb(216,216,216);
}
QListWidget#identitiesListWidget {
    background: #1E2030;
    color:#ffffff;
}
QListView#fileListView::item:hover {
    background: transparent;
}
QListView#fileListView::item:selected {
    background: transparent;
}

/* Toolbar (main toolbar with buttons and volume slider) */
QToolBar {
    border: transparent;
    background: #1E2030;
    spacing: 5px;
}

/* Tool Buttons */
QToolButton {
    border: none;
    border-radius: 3px;
    background-color: #1E2030;
    font-weight: bold;
    color: #ffffff;
    padding: 3px;
}
QToolButton:pressed {
    background: #1E2030;
    color: #ffffff;
}
QToolButton:hover {
    background: #1E2030;
    color: #ffffff;
}
QToolButton:checked {
    background: #1E2030;
    color: #ffffff;
}

/* Tool Buttons with drop down menu */
QToolButton[popupMode="1"] {
    border: none;
    border-radius: 3px;
    padding-right: 15px;
}
QToolButton[popupMode="1"]:hover {
    border: none;
    border-radius: 3px;
    padding-right: 15px;
}
QToolButton[popupMode="1"]:checked {
    border: none;
    background: #1E2030;
    color: #ffffff;
    border-radius: 3px;
    padding-right: 15px;
}
/* Tool Button drop down arrow */
QToolButton::menu-button {
    border: none;
    border-top-right-radius: 3px;
    border-bottom-right-radius: none;
    width: 12px;
}
QToolButton::menu-button:hover {
    border: none;
    border-radius: 3px;
}

/* TabBar (e.g. server tabs, chat tabs, permission group tabs, etc.) */
QTabWidget::tab-bar {
    alignment: left;
}
QTabWidget#permTabWidget::pane {
    border: none;
}
QTabBar {
    background-color: transparent;
    border: none;
}
QTabBar::tab {
    background: #1E2030;
    border: none;
    color: #ffffff;
    min-width: 8ex;
    padding: 6px;
}
QTabBar::tab:selected, QTabBar::tab:hover {
    background: #1E2030;
    color: #ffffff;
}

QTabBar::tab:selected:top {
    border-top: 3px solid #ffff00;
    margin-top: 0;
}
QTabBar::tab:selected:bottom {
    border-bottom: 3px solid #ffff00;
    margin-bottom: 0;
}
QTabBar::tab:!selected:top {
    border-top: 3px solid #1E2030;
    margin-top: 0;
}
QTabBar::tab:!selected:bottom {
    border-bottom: 5px solid #1E2030;
    margin-bottom: 0;
}

/* SpinBox (input fields with "up" and "down" buttons) */
QSpinBox,
QDoubleSpinBox,
QDoubleSpinBox#delayPTTSpinBox,
QSpinBox#uploadBWSpinBox,
QSpinBox#downloadBWSpinBox,
QSpinBox#reloadChannelChatsSpinBox,
QSpinBox#reloadClientChatsSpinBox,
QSpinBox#uploadSpeedSpinBox,
QSpinBox#downloadSpeedSpinBox {
    background: #1E2030;
    border:1px solid #1E2030;
    border-radius: 3px;
    padding: 6px;
    color: #CCCCCC;
    selection-background-color: #14151f;
}
QSpinBox::disabled,
QDoubleSpinBox#delayPTTSpinBox::disabled,
QSpinBox#uploadBWSpinBox::disabled,
QSpinBox#downloadBWSpinBox::disabled,
QSpinBox#reloadChannelChatsSpinBox::disabled,
QSpinBox#reloadClientChatsSpinBox::disabled,
QSpinBox#uploadSpeedSpinBox::disabled,
QSpinBox#downloadSpeedSpinBox::disabled {
    background:  #1E2030;
    border:1px solid #1E2030;
    border-top-right-radius: 3px;
    border-bottom-left-radius: 3px;
    padding: 6px;
    color: #43454B;
    selection-background-color: none;
}
QSpinBox::up-button,QDoubleSpinBox::up-button,
QDoubleSpinBox#delayPTTSpinBox::up-button {
    background: transparent;
    border: none;
    border-top-right-radius: 3px;
    width: 15px;
    color: #ffffff;
}
QSpinBox::up-button:hover,
QDoubleSpinBox#delayPTTSpinBox::up-button:hover {
    background: transparent;
}
QSpinBox::up-button:pressed,
QDoubleSpinBox#delayPTTSpinBox::up-button:pressed {
    background: transparent;
}
QSpinBox::up-arrow,
QDoubleSpinBox::up-arrow {
    image:url("styles:dark/gfx/arrow_bold_up.svg");
    width: 10px;
    height: 10px;
    background-position: center center;
    background-repeat: no-repeat;
}
QSpinBox::up-arrow:hover,
QDoubleSpinBox::up-arrow:hover {
    image:url("styles:dark/gfx/arrow_bold_up_hover.svg");
}
QSpinBox::up-arrow:disabled,
QSpinBox::up-arrow:off,
QDoubleSpinBox#delayPTTSpinBox::up-arrow:disabled,
QDoubleSpinBox#delayPTTSpinBox::up-arrow:off {
    image: url("styles:dark/gfx/arrow_bold_up_disabled.svg");
}
QSpinBox::down-button,
QDoubleSpinBox::down-button,
QDoubleSpinBox#delayPTTSpinBox::down-button {
    background: transparent;
    border:none;
    border-bottom-right-radius: 3px;
    width: 15px;
}
QSpinBox::down-button:hover,
QDoubleSpinBox#delayPTTSpinBox::down-button:hover {
    background: #1E2030;
}
QSpinBox::down-button:pressed,
QDoubleSpinBox#delayPTTSpinBox::down-button:pressed {
    background: #1E2030;
}
QSpinBox::down-arrow,
QDoubleSpinBox::down-arrow {
    image: url("styles:dark/gfx/arrow_bold_down.svg");
    width: 10px;
    height: 10px;
    background-position: center center;
    background-repeat: no-repeat;
}
QSpinBox::down-arrow:hover,
QDoubleSpinBox::down-arrow:hover {
    image: url("styles:dark/gfx/arrow_bold_down_hover.svg");
}
QSpinBox::down-arrow:disabled,
QSpinBox::down-arrow:off,
QDoubleSpinBox#delayPTTSpinBox::down-arrow:disabled,
QDoubleSpinBox#delayPTTSpinBox::down-arrow:off {
    image: url("styles:dark/gfx/arrow_bold_down_disabled.svg");
}
/* Tree View (e.g. channel tree) */
QTreeView {
    alternate-background-color: transparent;
    show-decoration-selected: 0;
    border: 1px solid #1E2030;
    border-radius: 3px;
    outline: none;
}
QTreeView#ServerTreeView,
QTreeView#remoteTreeView,
QTreeView#localTreeView {
  qproperty-rootIsDecorated: 0;
}
QTreeView#ServerTreeView {
    border: none;
}
TreeView {
    background: #1E2030;
    color: #ffffff;
}
QTreeView::item {
    padding: 1px;
    border: 0px;
}
QTreeView::item:hover {
    background: #36393F;
    color: #ffffff;
}
QTreeView::item:selected:active {
    background: #1E2030;
    color: #ffffff;
}
QTreeView::item:selected:!active {
    background: #1E2030;
    color: #ffffff;
}
QTreeView::branch:hover {
    background: #25262A;
}

QTreeView::branch:has-children:!has-siblings:closed,
QTreeView::branch:closed:has-children:has-siblings {
    border-image: none;
    image: url(styles:dark/gfx/arrow_right.svg);
    padding: 6px;
}
QTreeView::branch:has-children:!has-siblings:closed:hover,
QTreeView::branch:closed:has-children:has-siblings:hover {
    image: url(styles:dark/gfx/arrow_right_hover.svg);
}
QTreeView::branch:open:has-children:!has-siblings,
QTreeView::branch:open:has-children:has-siblings  {
    border-image: none;
    image: url(styles:dark/gfx/arrow_down.svg);
    padding: 6px;
}
QTreeView::branch:open:has-children:!has-siblings:hover,
QTreeView::branch:open:has-children:has-siblings:hover  {
    image: url(styles:dark/gfx/arrow_down_hover.svg);
}
QTreeView#eventsTreeView::indicator:checked,
QTreeView#permissionsTreeView::indicator:checked,
QTreeWidget#appsTreeWidget::indicator:checked,
QListWidget#pluginsListWidget::indicator:checked,
QListView#ServerGroupsListView::indicator:checked,
QTreeWidget#clientsTreeWidget::indicator:checked,
QGroupBox#advancedGroupBox::indicator:checked {
    background-color: transparent;
    border: none;
    border-radius: 3px;
    image: url(styles:dark/gfx/checkbox_tree_enabled.svg);
}
QTreeView#eventsTreeView::indicator:checked:hover,
QTreeView#permissionsTreeView::indicator:checked:hover,
QTreeWidget#appsTreeWidget::indicator:checked:hover,
QListWidget#pluginsListWidget::indicator:checked:hover,
QListView#ServerGroupsListView::indicator:checked:hover,
QTreeWidget#clientsTreeWidget::indicator:checked:hover,
QGroupBox#advancedGroupBox::indicator:checked:hover {
    background: transparent;
}
QTreeView#eventsTreeView::indicator:unchecked,
QTreeView#permissionsTreeView::indicator:unchecked,
QTreeWidget#appsTreeWidget::indicator:unchecked,
QListWidget#pluginsListWidget::indicator:unchecked,
QListView#ServerGroupsListView::indicator:unchecked,
QTreeWidget#clientsTreeWidget::indicator:unchecked,
QGroupBox#advancedGroupBox::indicator:unchecked {
    background-color: transparent;
    border: none;
    border-radius: 3px;
    image: url(styles:dark/gfx/checkbox_tree_disabled.svg);
}
QTreeView#eventsTreeView::indicator:unchecked:hover,
QTreeView#permissionsTreeView::indicator:unchecked:hover,
QTreeWidget#appsTreeWidget::indicator:unchecked:hover,
QListWidget#pluginsListWidget::indicator:unchecked:hover,
QListView#ServerGroupsListView::indicator:unchecked:hover,
QTreeWidget#clientsTreeWidget::indicator:unchecked:hover,
QGroupBox#advancedGroupBox::indicator:unchecked:hover {
    background: transparent;
}
QTreeWidget#clientsTreeWidget {
    background: transparent;
}

/* Scroll bars */
QScrollBar {
    border: 1px solid transparent;
    border-radius: 5px;
    background: #1E2030;
    margin: 1px;
}
QScrollBar:vertical {
    width: 12px;
}
QScrollBar:horizontal {
    height: 12px;
}
QScrollBar::handle {
    border: 1px solid transparent;
    background: #1E2124;
    border-radius: 4px;
}
QScrollBar::handle:vertical {
    min-height: 20px;
}
QScrollBar::handle:horizontal {
    min-width: 20px;
}
QScrollBar::up-arrow:vertical {
    background: url("styles:dark/gfx/arrow_bold_up.svg");
    background-repeat: none;
    left: 3px;
    top: 5px;
}
QScrollBar::down-arrow:vertical {
    background: url("styles:dark/gfx/arrow_bold_down.svg");
    background-repeat: none;
    left: 3px;
    top: 5px;
}
QScrollBar::left-arrow:horizontal {
    background: url("styles:dark/gfx/arrow_bold_left.svg");
    background-repeat: none;
    left: 5px;
    top: 3px;
}
QScrollBar::right-arrow:horizontal {
    background: url("styles:dark/gfx/arrow_bold_right.svg");
    background-repeat: none;
    left: 5px;
    top: 3px;
}
QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical,
QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal {
    background: none;
}
QScrollBar::add-line:vertical,
QScrollBar::add-line:horizontal,
QScrollBar::sub-line:vertical,
QScrollBar::sub-line:horizontal {
    width: 0px;
    height: 0px;
}

/* HeaderView */
QHeaderView::section {
    background: #14151f;
    color: #ffffff;
    height: 25px;
    padding-left: 5px;
    border: none;
    border-bottom: 1px solid #1e2030;
    border-right: 1px solid #1e2030;
}
QHeaderView::section:last {
    border-right: none;
}

/* TableView (e.g. hotkeys, notifications) */
QTableView {
    alternate-background-color: #2F3237;
    selection-background-color: #14151f;
    selection-color: #ffffff;
    qproperty-alternatingRowColors: 1;
    gridline-color: #1e2030;
    border-radius: 3px;
}
QTableView::item {
    border: 1px solid transparent;
}
QTableView::item:hover {
    background: #36393F;
    border: 1px solid transparent;
    color: #ffffff;
}
QTableView::item:selected:active {
    background: #1E2030;
    color: #ffffff;
    border: 1px solid transparent;
}
QTableView::item:selected:!active {
    background: #1E2030;
    border: 1px solid transparent;
}

/*QSlider (e.g. volume slider, etc.) */
QSlider {
    background: none;
    padding-top: 6px;
    padding-bottom: 6px;
}
QSlider::groove:horizontal {
    background: #ffff00;
    border: 1px solid transparent;
    border-radius: 3px;
    padding-right: 5px;
    padding-left: 5px;
    height: 7px;
}
QSlider::sub-page:horizontal { /*left side*/
    background: #ffff00;
    border-bottom: none;
    border-left: none;
    border-top: none;
    border-radius: 3px;
}
QSlider::add-page:horizontal { /*right side*/
    background: #4F545C;
    border-bottom: none;
    border-right: none;
    border-top: none;
    border-radius: 3px;
}
QSlider::handle:horizontal {
    background: #ffffff;
    border-bottom: none;
    border-right: none;
    border-left: none;
    border-top: none;
    border-radius: 3px;
    margin: -8px 0;
    width: 9px;
}

QSlider::groove:vertical {
    background: #ffff00;
    border: 1px solid transparent;
    border-radius: 3px;
    padding-top: 5px;
    padding-bottom: 5px;
    width: 7px;
}
QSlider::sub-page:vertical { /*top side*/
    background: #ffff00;
    border-bottom: none;
    border-left: none;
    border-top: none;
    border-radius: 3px;
}
QSlider::add-page:vertical { /*bottom side*/
    background: #4F545C;
    border-bottom: none;
    border-right: none;
    border-top: none;
    border-radius: 3px;
}
QSlider::handle:vertical {
    background: #ffffff;
    border-bottom: none;
    border-right: none;
    border-left: none;
    border-top: none;
    border-radius: 3px;
    margin: 0 -8px;
    height: 9px;
}

/* Excluding background for specific elements */
QLabel,
QCheckBox,
QRadioButton,
QGroupBox,
QSlider,
QFrame#bookmarksTopFrame,
QWidget#advancedWidget,
QWidget#statusChangeWidget,
QWidget#connectToWidget,
QWidget#switchToWidget,
QWidget#disableWidget,
QWidget#activateWidget,
QWidget#recordingWidget,
ImprovedTabBarCloseButton,
QWidget#avatarWidget,
QWidget#ToolbarStretcher,
QStackedWidget {
    background: none;
}
