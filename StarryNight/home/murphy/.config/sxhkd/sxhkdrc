# program launcher
super + p
	rofi -show drun

# calculator
super + ctrl + c 
	rofi -show calc -modi calc -no-show-match -no-sort -theme calc -no-history -calc-command "printf '\{expression\} = \{result\}' | xclip -sel clip"

# ssh list
super + alt + s
	rofi -show ssh -modi ssh -parse-hosts -no-parse-known-hosts

# todo list
super + ctrl + t
	addr="/home/murphy/.config/rofi/todo.sh" && rofi -show todo -modi "todo:$addr,movie:$addr --movie"

# emoji list
super + e
	rofi -modi emoji -show emoji

# terminal emulator
super + t
	alacritty

# reload bspwm
super + r
	bspc wm -r

# reload picom
super + alt + r
	pkill picom ; picom -b

# make sxhkd reload its configuration files:
super + ctrl + r
	pkill -USR1 -x sxhkd

# close
super + q
	bspc node -c

# quit bspwm
super + alt + q
	bspc quit

# focus or send to the given desktop
super + {_,alt + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# move the window to other monitor
super + s
	bspc node --to-monitor next --follow

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus/move the node in the given direction
super + {_,alt} + {k,h,j,l}
	bspc node -{f,s} {north,west,south,east} --follow

# focus on previous window
super + a
	bspc node --focus last

# set the window state
super + { alt + t , f , alt + f }
	bspc node -t { tiled , floating , fullscreen }

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# expand a window by moving one of its side outward
super + shift + {h,j,k,l}
	bspc node -z {left -20 0 || bspc node -z right -20 0, \
                bottom 0 20 || bspc node -z top 0 20,\
                top 0 -20 || bspc node -z bottom 0 -20,\
                right 20 0 || bspc node -z left 20 0}

# move a floating window
super + alt + ctrl + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# pause spotify
XF86AudioPlay
	playerctl -p spotify play-pause

# next track spotify
XF86AudioNext
	playerctl -p spotify next

# prev track spotify
XF86AudioPrev
	playerctl -p spotify previous

# volume up spotify
XF86AudioRaiseVolume
	playerctl -p spotify volume 0.05+

# volume down spotify
XF86AudioLowerVolume
	playerctl -p spotify volume 0.05-

# screenshot
super + c
	addr="/mnt/Murphy/Media/Screenshots/$(date +%F_%H-%M-%S).png" && shotgun -s $addr && xclip -t 'image/png' -selection clipboard $addr && notify-send "Screenshot" "Screen Captured"

# screenshot with selection (grab)
super + g
	addr="/mnt/Murphy/Media/Screenshots/$(date +%F_%H-%M-%S).png" && sel="$(slop -b 2 -c "1,1,0,0.5" -l)" && shotgun -g $sel $addr && xclip -t 'image/png' -selection clipboard $addr && notify-send "Screenshot" "Screen Captured"

# record
super + alt + c
	killall -SIGUSR1 gpu-screen-recorder && notify-send "GpuScreenRecorder" "Last Minute Captured"

# fix clipboard
ctrl + { _ , shift } + c
	sleep 0.3s ; xclip -o | xclip -sel clip
